module decoder2 #(WIDTH=2:WIDTH>0)(
    input we_adr[WIDTH],
    input inp,
    output o0,
    output o1,
    output o2    
  ) {

  always {
    if(we_adr[0]==1){
      if(we_adr[1]) {
        o0=0;
        o1=0;
        o2=0;
      } else {
        o0=0;
        o1=0;
        o2=inp;
        }
      } else{
      if(we_adr[1]){
        o0=0;
        o1=inp;
        o2=0;
      } else{
        o0=inp;
        o1=0;
        o2=0;
      }
      }
    
  }
}